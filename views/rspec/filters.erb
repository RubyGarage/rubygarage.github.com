  <script type="syntaxhighlighter" class="brush: ruby">
  <![CDATA[
    describe Actor do
      let(:name) { "Ivan" }

      context "with subject redefinition", focus: true do 
        let(:actor) {  Actor.new(name) } 
        subject { actor }
         
        it "has name", slow: true do
          subject.name.should == name
        end

      end
    end]]>
  </script>

