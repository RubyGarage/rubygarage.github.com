<section id="render" class="slide">
  <div class="vcenter">
    <h1>Render</h1>

    <div class="slide" id="render-json-xml">
      <h2>render :json => @object</h2>
      <h2>render :xml => @object</h2>
      
      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[      
          def index
            @post = Post.all
            respond_to do |format|
              format.html
              format.json { render json: @posts}
              format.xml { render xml: @posts}
            end
          end
        ]]>
      </script>
      to_json, to_xml
    </div>

    <div class="slide" id="render-js">
      <h2>render :js => 'JavaScript'</h2>
      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[      
          def index 
            @posts = Post.all
            respond_to do |format|
              format.html
              format.json{ render json: @posts }
              format.xml{ render xml: @posts }
              format.js do
                render render:=> "alert('Count #{@posts.length}');"
              end
            end
          end
        ]]>
      </script>
    </div>
    

  </div>
</section>
