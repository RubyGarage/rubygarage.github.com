<section id="collections_in_partials" class="slide">
  <div class="vcenter">
    <h1>Collection</h1>
    <br/>
    <script type="syntaxhighlighter" class="brush: ruby">
      <![CDATA[      
        #posts/index.html.erb
        <h1>Posts<h1>
        <table>
          <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Content</th>
          </tr>  
        < %  render :partial => "post", :collection => @posts % >
 
      ]]>
    </script>

    <div class = "slide" id= "partial-with-collection-result"> 
      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[      
          #posts/_post.html.erb
          
          <tr>
            <td>< %= post.name % ></td>
            <td>< %= post.title % ></td>
            <td>< %= post.content % ></td>
          </tr> 
        ]]>
      </script>
    </div>
    

    <div class = "slide" id= "partial-only-collection"> 
      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[      
          #posts/index.html.erb
          <h1>Posts<h1>
          <table>
            <tr>
              <th>Name</th>
              <th>Title</th>
              <th>Content</th>
            </tr>  
          < %  render @posts % >
        ]]>
      </script> 
    </div>

    <div class = "slide" id= "partial-as-article">
      <script type="syntaxhighlighter" class="brush: ruby">
        < %  render :partial => "post", :collection => @posts, :as => :article % >
      </script>

      <script type="syntaxhighlighter" class="brush: ruby">
        < %  render :partial => "post", :collection => @posts, :as => :item, :locals => { :title => "Post page" } % >
      </script>
    </div>
    
    <div class = "slide" id= "collection-with-layout"> 
      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[      
          < %  render :partial => "post", :collection => @posts, layout: "single_post_layout" % >
        ]]>
      </script>
    </div>
  </div>
</section>
