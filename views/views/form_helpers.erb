<section id="form-helpers" class="slide">
  <div class="vcenter">
    <h1>Form helpers</h1>

    <div id="form-helpers">
      <h2>form_tag, label_tag, text_field_tag, hidden_field_tag, submit_tag</h2>
      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[      
          < %= form_tag("/posts/search", :method => 'get') do % >
          < %= label_tag(:q, "Search for:") % >
          < %= text_field_tag(:q) %>
          < %= hidden_field_tag(:special_id, "11") % >
          < %= submit_tag("Search") 
        ]]>
      </script>

      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[      
          <form accept-charset="UTF-8" action="/posts/search" method="get">
            <label for ="q"> Search for: </label>
            <input id ="q" name = "q" type = "text" />
            <input id ="special_id" name= "special_id" type = "hidden" value="5" />
            <input name = "commit" type ="submit" value= "Search" />
          </form>
        ]]>
      </script>
    </div>

    <div class = "slide" id="checkbox-and-radio-button-tags">
      <h2>checkbox_tag, radio_button_tag</h2>
      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[    
          < %= check_box_tag(:like) % >
        ]]>
      </script>

      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[    
          <input id="like" name="like" type="checkbox" value="1" />
        ]]>
      </script>
      
      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[    
          < %= radion_button_tag(:age, "child") % >
          < %= label_tag(:age_child, "I am younger than 21")
          < %= radion_button_tag(:age, "adult") % >
          < %= label_tag(:age_child, "I am over 21") % >
        ]]>
      </script>

      <script type="syntaxhighlighter" class="brush: ruby">
        <![CDATA[    
          <input id= "age_child" name= "age" type= "radio" value= "child" />
          <label for= "age_child"> I am younger than 21 </label>
          <input id= "age_adult" name= "age" type= "radio" value= "adult" />
          <label for= "age_child"> I am over 21 </label>
        ]]>
      </script>

    </div>
